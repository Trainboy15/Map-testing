import java.util.ArrayList;

public class Main{
    public static void MapBlank() {
    var spacer = "      ";
       var map = new ArrayList<>();
        map.add(spacer);
        map.add(spacer);
        map.add(spacer);
        map.add(spacer);
        
    
    
    
    System.out.print(map.get(0));
    System.out.print(map.get(1));
    System.out.print(map.get(2));
    System.out.print(map.get(3));
    
  } 
  
 
     public static void MapLine() {
    var spacer = "      ";
       var map = new ArrayList<>();
        map.add("|");
        map.add("|");
        map.add("|");
    
    
    System.out.println(map.get(0));
    System.out.println(map.get(1));
    System.out.println(map.get(2));
  } 
  
    public static void mapPipe() {
    var spacer = "      ";
       var map = new ArrayList<>();
        map.add("|      |");
        map.add("|      |");
        map.add("|      |");
    
    
    System.out.println(map.get(0));
    System.out.println(map.get(1));
    System.out.println(map.get(2));
  }
    public static void mapSidePipe() {
    var spacer = "      ";
       var map = new ArrayList<>();
        map.add("--------");
        map.add("--------");
    
    System.out.println(map.get(0));
    System.out.println(spacer);
    System.out.println(spacer);
    System.out.println(map.get(1));
  }
    public static void mapRightPipe() {
    var spacer = "      ";
       var map = new ArrayList<>();
        map.add("_______");
        map.add("|      ");
        map.add("|      ");
        map.add("|      ");
    
    System.out.println(map.get(0));
    System.out.println(map.get(1));
    System.out.println(map.get(2));
    System.out.println(map.get(3));
  }
    public static void mapRightPipeOff() {
    var spacer = "      ";
       var map = new ArrayList<>();
        map.add("_______");
        map.add("|      ");
        map.add("|      ");
        map.add("|      ");
    System.out.print(spacer);
    System.out.println(map.get(0));
    System.out.print(spacer);
    System.out.println(map.get(1));
    System.out.print(spacer);
    System.out.println(map.get(2));
    System.out.print(spacer);
    System.out.println(map.get(3));
  }


     public static void main(String[] args) throws Exception {
         
     
      mapRightPipe();
      MapBlank();
      mapSidePipe();
      mapPipe();
      
      
      
      
      
      
      
      
      
    }
}
